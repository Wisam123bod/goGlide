<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goGlide.RegNewCar"
             Title="RegNewCar">
    <VerticalStackLayout>
        <Label 
            Text="Registration plate number:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            Placeholder="Enter text here"
            Text="{Binding RegID}"
            x:Name="Entry_regID" />

        <Label 
            Text="Brand:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            Placeholder="Enter text here"
            Text="{Binding Brand}"
            x:Name="Entry_Brand" />

        <Label 
            Text="Model:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            Placeholder="Enter text here"
            Text="{Binding Model}"
            x:Name="Entry_Model" />

        <Label 
            Text="Type:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            Placeholder="Enter text here"
            Text="{Binding Type}"
            x:Name="Entry_Type" />

        <Button Text="Register Car" Clicked="CreateCarButton_Clicked" />

        <Label x:Name="registeredCarsLabel" /> <!--FLYTTA DENNA SEN-->

    </VerticalStackLayout>
</ContentPage>
