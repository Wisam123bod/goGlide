<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goGlide.RentOutCar"
             Title="RentOutCar">
    <StackLayout>
    <!-- Checkboxes for car checking, ID card scanning, and days of rental -->
        <StackLayout Orientation="Horizontal" Spacing="10">
            <Label Text="Check car"
                   VerticalOptions="Center"
                   FontSize="18"/>
            <CheckBox x:Name="CheckCarCheckBox" />
        </StackLayout>

        <StackLayout Orientation="Horizontal" Spacing="10">
            <Label Text="Scanned ID card"
                   VerticalOptions="Center"
                   FontSize="18" />
            <CheckBox x:Name="IDCardScannedCheckBox" />
        </StackLayout>

        <Entry x:Name="DaysRentedEntry"
               FontSize="18"
               Placeholder="Days of rental" />

        <!-- Confirm Rent button -->
        <Button Text="Confirm Rent"
                Clicked="OnConfirmRentClicked"
                BackgroundColor="#007BFF"/>
</StackLayout>
</ContentPage>
